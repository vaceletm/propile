<%= form_for(@presenter) do |f| %>
  <%= errors_for @presenter %>

  <div>
    <%= f.label :name %> 
  </div>
  <div>
    <%= text_field :presenter, :name, :size => "100" %> 
  </div>
  <br />
  <div>
    <%= f.label :email %> <i><%= current_account.maintainer? ? "(Seulement les moderateurs peuvent le modifier)" : ""  %></i> 
  </div>
  <div>
    <%= text_field :presenter, :email, :disabled => (!current_account.maintainer?), :size => "100" %> 
  </div>
  <br />
  <div>
    <%= f.label :profile_image %> <i>Lien vers une image du profile en ligne (max 200x200 pixels)</i>
  </div>
  <div>
    <%= text_field :presenter, :profile_image, :size => 128 , :maxlength => 1024 %>
  </div>
  <br />
    <div>
    <%= f.label :website %> <i>Lien vers votre blog, site de votre entreprise...</i>
  </div>
  <div>
    <%= text_field :presenter, :website, :size => 128 , :maxlength => 1024 %>
  </div>
  <br />
    <div>
    <%= f.label :twitter_id %> <i>dans le format @username</i>
  </div>
  <div>
    <%= text_field :presenter, :twitter_id, :size => 128 , :maxlength => 128 %>
  </div>
  <br />
  <% if current_account.maintainer? %>
    <div>
      <%= f.select :role, [Account::Maintainer, Account::Presenter]  %>
      <i>(Seulement les moderateurs peuvent le voir et le modifier) </i> 
    </div>
  <% end %>
  <br />
  <div>
    <%= f.label :bio %> 
    <%= link_to '(formatting)', "/pages/formatting", :target => '_blank', :class => 'smalllink' %> 
  </div>
  <div>
    <%= text_area :presenter, :bio, :cols => "100"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
